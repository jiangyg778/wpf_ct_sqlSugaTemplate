<UserControl
    x:Class="wpf_ct_sqlSugarTemplate.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:wpf_ct_sqlSugarTemplate.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:wpf_ct_sqlSugarTemplate.ViewModels"
    d:DataContext="{d:DesignInstance vm:MainViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesign.Brush.Background}"
    FontFamily="Microsoft YaHei"
    FontSize="16"
    TextElement.FontSize="16"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    mc:Ignorable="d">
    <DockPanel>
        <DockPanel Background="#546e7a" DockPanel.Dock="Left">
            <StackPanel DockPanel.Dock="Top">
                <ListView
                    Cursor="Hand"
                    ItemsSource="{Binding MenuEntities}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    SelectedIndex="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                                Width="80"
                                Margin="0,5,0,5"
                                Background="Transparent">
                                <b:Interaction.Triggers>
                                    <b:EventTrigger EventName="PreviewMouseUp">
                                        <b:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.NavigationCommand}" CommandParameter="{Binding}" />
                                    </b:EventTrigger>
                                </b:Interaction.Triggers>
                                <materialDesign:PackIcon
                                    Width="20"
                                    Height="20"
                                    Margin="5"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    Foreground="White"
                                    Kind="{Binding Icon}" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="15"
                                    Foreground="White"
                                    Style="{StaticResource MaterialDesignTitleSmallTextBlock}"
                                    Text="{Binding MenuName}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
            <StackPanel
                Margin="0,15,0,4"
                VerticalAlignment="Bottom"
                DockPanel.Dock="Bottom">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="PreviewMouseUp">
                        <b:InvokeCommandAction Command="{Binding ChangeUserCommand}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
                <materialDesign:PackIcon
                    Width="25"
                    Height="25"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    Foreground="White"
                    Kind="ArrowLeftBoldCircle" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="White"
                    Text="切换用户" />
            </StackPanel>
        </DockPanel>
        <DockPanel />
        <DockPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <ContentControl
                    x:Name="Page"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />
                <StackPanel
                    Grid.Row="1"
                    Background="#cfd8dc"
                    Orientation="Horizontal">
                    <StatusBarItem
                        Margin="0,0,5,0"
                        Content="[Spray Process SCADA System--YaGuang]"
                        Foreground="Gray" />
                    <StatusBarItem
                        Margin="0,0,5,0"
                        Content="当前用户"
                        Foreground="Gray" />
                    <StatusBarItem
                        Margin="0,0,5,0"
                        Content="{Binding UserSessionProp.CurrentUser.UserName}"
                        Foreground="Gray" />
                </StackPanel>
            </Grid>
        </DockPanel>
    </DockPanel>

</UserControl>
