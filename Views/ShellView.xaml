<mah:MetroWindow
    x:Class="wpf_ct_sqlSugarTemplate.Views.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:wpf_ct_sqlSugarTemplate.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:wpf_ct_sqlSugarTemplate.ViewModels"
    Title="入口"
    Width="800"
    Height="500"
    d:DataContext="{d:DesignInstance vm:ShellViewModel}"
    Background="{DynamicResource MaterialDesign.Brush.Background}"
    FontFamily="Microsoft YaHei"
    TextElement.FontSize="16"
    TextElement.FontWeight="Regular"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <materialDesign:DialogHost Identifier="ShellDialog">
        <ContentControl x:Name="container" />
    </materialDesign:DialogHost>
</mah:MetroWindow>
